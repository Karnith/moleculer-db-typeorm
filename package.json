{
  "name": "moleculer-db-typeorm",
  "version": "1.0.0",
  "description": "Moleculer service to store typeorm entities in database for standard or multi-tenant solutions",
  "main": "./dist/index.js",
  "types": "./moleculer-db-typeorm.d.ts",
  "scripts": {
    "dev": "nodemon examples/index.js",
    "ci": "jest --watch",
    "clean": "yarn clean:packages && yarn install",
    "clean:packages": "rm -fr yarn.lock package-lock.json dist node_modules",
    "test": "jest --coverage",
    "lint": "eslint --ext=.js src test",
    "deps": "npm-check -u",
    "readme": "node node_modules/moleculer-docgen/index.js -t README.md src/index.js",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "yarn build:clean && tsc --build tsconfig.json",
    "build:clean": "rimraf dist bin"
  },
  "keywords": [
    "microservice",
    "moleculer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Karnith/moleculer-db-typeorm.git"
  },
  "homepage": "https://github.com/Karnith/moleculer-db-typeorm/tree/master/packages/moleculer-db#readme",
  "author": "Matthew Marino",
  "license": "MIT",
  "peerDependencies": {
    "moleculer": "^0.14.10"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.38",
    "@types/flat": "^5.0.2",
    "@types/jest": "^29.5.0",
    "benchmarkify": "^3.0.0",
    "coveralls": "^3.1.1",
    "fakerator": "^0.3.6",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-junit": "^16.0.0",
    "kleur": "^4.1.5",
    "lolex": "^6.0.0",
    "moleculer": "^0.14.29",
    "moleculer-docgen": "^0.3.0",
    "nodemon": "^2.0.22",
    "npm-check": "^6.0.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/services/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "diagnostics": true
        }
      ]
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ]
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "dependencies": {
    "@seald-io/nedb": "^4.0.1",
    "bluebird": "^3.7.2",
    "flat": "^5.0.2",
    "lodash": "^4.17.21",
    "typeorm": "^0.3.15"
  }
}
